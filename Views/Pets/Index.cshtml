@model IEnumerable<c18_98_m_csharp.Models.Pet>

@{
    ViewData["Title"] = "Mis mascotas";
}

<h2 class="text-4xl text-primary font-medium mb-10">Mis mascotas</h2>

@{
    if (Model.Count() == 0)
    {
        <partial name="Shared/NoPets" />
    }
    else
    {
        @foreach (var pet in Model)
        {
            <div class="flex flex-row gap-8 bg-ui-light-section rounded-lg p-4 shadow-md">
                <div class="w-24 h-24 bg-slate-400 rounded-full"></div>
                <div class="flex flex-col justify-center">
                    <div>@pet.Species @pet.Breed</div>
                    <div class="text-2xl font-medium">@pet.Name</div>
                    <div>@pet.Birthdate</div>
                </div>
            </div>
        }
        <partial name="Shared/AddPetButton" />
    }
}


