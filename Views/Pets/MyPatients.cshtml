@model IEnumerable<c18_98_m_csharp.Models.Pets.Pet>

@{
    ViewData["Title"] = "Mis pacientes";
}

@{
    if (Model.Count() == 0)
    {
        <partial name="Shared/NoPets" />
    }
    else
    {
        @foreach (var pet in Model)
        {
            <partial name="Shared/PetCard" model="pet" />
        }
        <br />
        <partial name="Shared/AddPetButton" />
    }
}
