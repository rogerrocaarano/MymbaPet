@model c18_98_m_csharp.Models.Pets.Pet
@{
    var petAge = DateTime.Now.Year - Model.Birthdate.Year;
}
<a asp-action="Details" asp-route-id="@Model.Id"
   class="flex flex-row gap-8 bg-ui-light-section p-4 bg-tertiary-100 rounded-md border border-primary-400">
    <div class="w-24 h-24 bg-slate-400 rounded-full"></div>
    <div class="flex flex-col justify-center text-primary-400">
        <div class="text-xl font-medium">@Model.Name</div>
        <div>
            <span>@Model.Species @Model.Breed</span>
            <span>@petAge años</span>
        </div>
    </div>
</a>