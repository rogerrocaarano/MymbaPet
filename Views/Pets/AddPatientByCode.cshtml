@model c18_98_m_csharp.Models.Pets.PetAccessCode

@{
    ViewData["Title"] = "Agregar mascota por código de acceso";
}



<form asp-action="AddPatientByCode" class="flex flex-col">
    <input 
        type="text" 
        asp-for="Code" 
        class="text-5xl font-medium bg-primary-100 border-2 border-primary rounded-2xl p-16 text-center text-primary-800"/>
    <p class="text-center text-2xl text-primary-800">
        Introducí el código proporcionado por el tutor de la mascota.
    </p>
    <input type="submit" value="Agregar" class="twbtn solid-primary"/>
</form>

