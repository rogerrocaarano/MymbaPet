@{
    string[] reviewImages = {
        "https://placehold.co/400",
        "https://placehold.co/400",
        "https://placehold.co/400"
    };
    string[] reviewHeaders = {
        "Martín Ferrante, Familiar de Simón (gato)",
        "María Juárez, Refugio Amigos de los Animales",
        "Mónica Gómez, Veterinaria"
    };
    string[] reviewTexts = {
        "“Ahora me puedo ir de vacaciones con mi gato, Simón, sin preocupaciones. Mymba Pet me ha dado tranquilidad al tener toda la información veterinaria de mi gato siempre a mano.”",
        "“En nuestro refugio, Mymba Pet nos ha facilitado el seguimiento de la salud de cada animal. Ahora tenemos todos los registros médicos organizados y accesibles en un solo lugar.”",
        "“Mymba Pet ha revolucionado la forma en que gestiono la información de mis pacientes. Es fácil de usar y mantiene a los dueños informados en todo momento. ¡Altamente recomendada!”"
    };
}
<section class="bg-primary py-24">
    <h2 class="container mx-auto text-white text-center text-3xl font-medium mb-10">Lo que nuestros usuarios dicen</h2>
    <div class="container mx-auto grid grid-cols-3 gap-10">
@foreach (var (image, header, text) in reviewImages.Zip(reviewHeaders.Zip(reviewTexts, (h, t) => (h, t)), (i, ht) => (i, ht.h, ht.t)))
    {
        <div class="p-8 rounded-2xl bg-white">
            <img src="@image" class="w-48 h-48 mx-auto rounded-full mb-5 shadow-lg"/>
            <h3 class="text-center text-sm mb-4">@header</h3>
            <p class="text-center">@text</p>
        </div>
    }
    </div>
    
</section>