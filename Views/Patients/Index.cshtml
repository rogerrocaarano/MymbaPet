@model IEnumerable<c18_98_m_csharp.Models.Pet>

@{
    ViewData["Title"] = "Mis pacientes";
}

<h2 class="text-4xl text-primary font-medium mb-10">@ViewData["Title"]</h2>

@{
    if (Model.Count() == 0)
    {
        // TODO: Implementar la vista parcial NoPets
        @* <partial name="Shared/NoPets" /> *@
    }
    else
    {
        @foreach (var pet in Model)
        {
            <div class="flex flex-row gap-8 bg-ui-light-section p-4 shadow-sm">
                <div class="w-24 h-24 bg-slate-400 rounded-full"></div>
                <div class="flex flex-col justify-center">
                    <div>@pet.Species @pet.Breed</div>
                    <div class="text-2xl font-medium">@pet.Name</div>
                    <div>@pet.Birthdate</div>
                    <a asp-action="Details" asp-route-id="@pet.Id">@pet.Id</a>
                </div>
            </div>
        }
        <br />
    }
}

