<!DOCTYPE html>
<html class="scroll-smooth" lang="es">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Mymba Pet</title>
    <link rel="stylesheet" href="~/css/tailwindcss.css" />
    <partial name="_FontsPartial" />
</head>

<body class="grid md:grid-cols-[14em_auto] bg-ui-light-page min-h-screen">
    <nav class="bg-ui-light-section shadow-sm">
        <div class="py-3 px-5 mb-10">
            <partial name="_MymbaLogo" />
        </div>

        <div class="font-medium font-ui px-5 mb-8">
            <partial name="/Views/Shared/App/NavigationWidget.cshtml" />
        </div>

        <div class="font-medium font-ui px-5">
            <partial name="/Views/Shared/App/UserWidget.cshtml" />
        </div>
    </nav>
    <main class="px-10 py-3">
        @RenderBody()
    </main>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>