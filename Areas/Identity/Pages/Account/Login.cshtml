@page
@model LoginModel

@{
    ViewData["Title"] = "Iniciar sesión";
}

<div class="flex flex-col justify-center px-6 py-12 lg:px-8 max-w-96 mx-auto">
    <div class="sm:mx-auto sm:w-full sm:max-w-sm">
        <img class="mx-auto h-36 w-auto" src="/images/logo-mymba.png" alt="Mymba Pet">
        <h2 class="mt-10 text-center text-2xl font-bold leading-9 tracking-tight">Iniciá sesión en tu cuenta</h2>
    </div>

    <div class="mt-10 sm:mx-auto sm:w-full sm:max-w-sm">
        <form id="account" class="space-y-6" method="post">
            <div>
                <label for="email" class="block text-sm font-medium leading-6">Correo electrónico</label>
                <div class="mt-2">
                    <input asp-for="Input.Email" autocomplete="username" aria-required="true"
                        placeholder="nombre@mymba.com"
                        class="block w-full rounded-md border-0 py-1.5 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 sm:text-sm sm:leading-6" />
                </div>
            </div>

            <div>
                <div class="flex items-center justify-between">
                    <label for="password" class="block text-sm font-medium leading-6">Contraseña</label>
                    <div class="text-sm">
                        <a id="forgot-password" asp-page="./ForgotPassword"
                            class="font-semibold text-primary">¿Olvidaste tu contraseña?</a>
                    </div>
                </div>
                <div class="mt-2">
                    <input asp-for="Input.Password" autocomplete="current-password" aria-required="true"
                        placeholder="Contraseña"
                        class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 sm:text-sm sm:leading-6" />
                </div>
            </div>

            <div>
                <button id="login-submit" type="submit" class="w-full btn-lg bg-primary px-3 py-1.5 text-sm text-white">
                    Iniciar sesión
                </button>
            </div>
        </form>

        <p class="mt-10 text-center text-sm text-gray-500">
            ¿No tenés cuenta?
            <a asp-area="Identity" asp-page="/Account/Register" class="font-semibold leading-6 text-primary">¡Registrate!</a>
        </p>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

